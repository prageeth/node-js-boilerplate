{
  "name": "node-js-bilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for JS using node",
  "main": "dist/app.js",
  "scripts": {
    "build": "rm -rf dist && babel src --ignore *.test.js -d dist",
    "test": "mocha --compilers js:babel-core/register test/**/*spec.js",
    "prepare": "npm run-script build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:prageeth/node-js-boilerplate.git"
  },
  "dependencies": {

  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-register": "^6.26.0",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "sinon": "^6.3.4",
    "sinon-chai": "^3.2.0"
  },
  "babel": {
    "presets": ["env"]
  }
}
